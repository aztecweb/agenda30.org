@import "variables"

@font-face
  font-family 'icons'
  src url(icomoon-font-path + '/icons.ttf?12kb2p') format('truetype'), url(icomoon-font-path + '/icons.woff?12kb2p') format('woff'), url(icomoon-font-path + '/icons.svg?12kb2p#icons') format('svg')
  font-weight normal
  font-style normal

[class^="i-"], [class*=" i-"]
  font-family 'icons' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.i-facebook
  &:before
    content i-facebook
.i-facebook-f
  &:before
    content i-facebook-f
.i-twitter
  &:before
    content i-twitter
.i-instagram
  &:before
    content i-instagram
.i-wordpress
  &:before
    content i-wordpress
.i-slack
  &:before
    content i-slack

