@import "variables"

@font-face
  font-family 'icons'
  src url(icomoon-font-path + '/icons.ttf?5kef4y') format('truetype'), url(icomoon-font-path + '/icons.woff?5kef4y') format('woff'), url(icomoon-font-path + '/icons.svg?5kef4y#icons') format('svg')
  font-weight normal
  font-style normal

[class^="i-"], [class*=" i-"]
  font-family 'icons' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.i-youtube
  &:before
    content i-youtube  
    color #f00
.i-soundcloud
  &:before
    content i-soundcloud  
    color #f30
.i-twitter
  &:before
    content i-twitter  
    color #1da1f2
.i-instagram
  &:before
    content i-instagram  
    color #e4405f
.i-wordpress
  &:before
    content i-wordpress  
    color #21759b
.i-slack
  &:before
    content i-slack  
    color #56b68b
.i-facebook
  &:before
    content i-facebook
.i-facebook-f
  &:before
    content i-facebook-f

