/**
 * Input placeholder helper functions
 */

/**
 * Reset placeholder for all browsers
 *
 * Based on pen https://codepen.io/alekskorovin/pen/cHvjC/ and Nib placeholder
 * mixin
 */
placeholder-reset()
    for v in ':-webkit-input' '-moz' ':-moz'
        &:{v}-placeholder
            opacity 1

// A mixin for stylus to style placeholder content on input html elements
// https://github.com/Lukavyi/stylus-input-placeholder-mixin
placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}
