.image-section
  &--wrapper
    aspect-ratio( 3, 2 )
    background-position center top
    background-size cover
    position relative

    @media ( orientation landscape )
      height 100vh

      &:before
        content none

  &--text
    font-family $dk
    left 0
    position absolute
    right 0
    text-align center
    text-transform uppercase
    width 100%
