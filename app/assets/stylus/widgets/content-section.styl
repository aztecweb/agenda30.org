.content-section
  color $white
  padding 35px 0

  &--icons
    font-size 60px
    margin-top 40px
    text-align center

    @media ( min-width $screen-md )
      display flex
      flex-direction column
      margin 0 30px

    &--icon
      body &
        color $white
        display inline-block
        height 61px
        overflow hidden
        text-decoration none
        width 60px

        @media ( min-width $screen-md )
          margin-bottom 30px

          &:last-child
            margin 0

        &__small
          font-size 48px
          margin-left 5px
          margin-right 5px
          height 48px
          width 48px

  &--text
    line-height 1.4em

    @media ( min-width $screen-md )
      margin-left 30px

    &__small
      margin 30px auto
      max-width 300px

      @media ( min-width $screen-md )
        margin 0

  .container
    @media ( min-width $screen-md )
      align-items center
      display flex
      justify-content space-between
